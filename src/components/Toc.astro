---
const { prefix, articleId, tocId, title = "", ariaLabel } = Astro.props;

const tocClass = `${prefix}__toc detail__toc`;
const titleClass = `${prefix}__toc-title detail__toc-title`;
const listClass = `${prefix}__toc-list detail__toc-list`;
const itemClass = `${prefix}__toc-item detail__toc-item`;
---

<aside class={tocClass}>
  {title && <div class={titleClass}>{title}</div>}
  <nav id={tocId} class={listClass} aria-label={ariaLabel}></nav>
</aside>

<script is:inline define:vars={{ articleId, tocId, itemClass }}>
  const runToc = () => {
    const article = document.getElementById(articleId);
    const toc = document.getElementById(tocId);
    if (article && toc) {
      const headings = Array.from(article.querySelectorAll("h1, h2, h3"));
      const slugify = (s) =>
        s
          .toLowerCase()
          .trim()
          .replace(/[^a-z0-9\u4e00-\u9fa5]+/g, "-")
          .replace(/^-+|-+$/g, "");
      const items = [];
      headings.forEach((h) => {
        const text = h.textContent || "";
        const id = h.id || slugify(text);
        if (!h.id) h.id = id;
        const depth = h.tagName === "H1" ? 1 : h.tagName === "H2" ? 2 : 3;
        items.push({ id, depth, text });
      });
      const html = items
        .map(
          (i) =>
            `<a href="#${i.id}" class="${itemClass} toc-depth-${i.depth}" data-id="${i.id}">${i.text}</a>`
        )
        .join("");
      toc.innerHTML = html;
      const links = Array.from(toc.querySelectorAll(`.${itemClass}`));
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            const id = entry.target.id;
            const link = toc.querySelector(`.${itemClass}[data-id="${id}"]`);
            if (link && entry.isIntersecting) {
              links.forEach((l) => {
                l.classList.remove("active");
                l.removeAttribute("aria-current");
              });
              link.classList.add("active");
              link.setAttribute("aria-current", "true");
            }
          });
        },
        { rootMargin: "0px 0px -60% 0px", threshold: 0.1 }
      );
      headings.forEach((h) => observer.observe(h));
    }
  };

  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", runToc, { once: true });
  } else {
    runToc();
  }
</script>

<style>
  :global(.detail__toc) {
    position: sticky;
    top: 120px;
    align-self: start;
    padding: 16px;
    border: 1px solid rgba(31, 31, 31, 0.08);
    background: rgba(255, 255, 255, 0.8);
    border-radius: 16px;
    box-shadow: 0 8px 20px rgba(31, 31, 31, 0.05);
  }

  :global(.detail__toc-title) {
    font-size: 0.8rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: rgba(31, 31, 31, 0.5);
    margin: 6px 8px 10px;
    padding-bottom: 8px;
    border-bottom: 1px solid rgba(31, 31, 31, 0.08);
  }

  :global(.detail__toc-list) {
    display: flex;
    flex-direction: column;
    gap: 6px;
    max-height: 60vh;
    overflow: auto;
  }

  :global(.detail__toc-item) {
    display: block;
    padding: 8px 12px;
    border-left: 2px solid transparent;
    color: rgba(31, 31, 31, 0.72);
    text-decoration: none;
    font-size: 0.95rem;
    border-radius: 8px;
    transition: all 0.15s ease;
  }

  :global(.detail__toc-item::before) {
    content: "•";
    margin-right: 8px;
    color: rgba(31, 31, 31, 0.35);
  }

  :global(.detail__toc-item.active) {
    border-left-color: #2f6f6d;
    color: #2f6f6d;
    background: rgba(47, 111, 109, 0.06);
  }

  :global(.detail__toc-item:focus-visible) {
    outline: 2px solid #2f6f6d;
    outline-offset: 2px;
    background: rgba(47, 111, 109, 0.06);
  }

  :global(.detail__toc .toc-depth-1) {
    font-weight: 600;
  }

  :global(.detail__toc .toc-depth-2) {
    padding-left: 12px;
    font-size: 0.92rem;
    color: rgba(31, 31, 31, 0.65);
  }

  :global(.detail__toc .toc-depth-3) {
    padding-left: 20px;
    font-size: 0.88rem;
    color: rgba(31, 31, 31, 0.6);
  }

  @media (max-width: 720px) {
    :global(.detail__toc) {
      position: static;
      top: auto;
    }
  }
</style>
<!-- Astro 组件的 scoped <style> 不会匹配运行时插入的元素（例如 JS 动态生成的目录项），这些元素没有组件作用域标记，导致样式失效。解决方式：用 :global(...) 限定父容器，或直接用 Tailwind/全局样式。 -->
