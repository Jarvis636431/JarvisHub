---
import Layout from "@layouts/Layout.astro";
import { getCollection } from "astro:content";

const postsCollection = await getCollection("blog", ({ data }) => {
  return import.meta.env.DEV ? true : data.draft !== true;
});

const sortedPosts = postsCollection
  .sort(
    (a, b) =>
      new Date(b.data.publishDate).getTime() -
      new Date(a.data.publishDate).getTime(),
  )
  .slice(0, 4);

const projectsCollection = await getCollection("projects", ({ data }) => {
  return import.meta.env.DEV ? true : data.status !== "archived";
});

const sortedProjects = projectsCollection
  .sort(
    (a, b) =>
      new Date(b.data.publishDate).getTime() -
      new Date(a.data.publishDate).getTime(),
  )
  .filter(({ data }) => data.featured)
  .slice(0, 4);

const stats = [
  { label: "CPU Load", value: "12%" },
  { label: "Memory", value: "64GB" },
  { label: "Uptime", value: "99.9%" },
];
---

<Layout title="Jarvis Hub | Command Center">
  <!-- Hero Section -->
  <section
    id="hero"
    class="min-h-[85vh] flex flex-col justify-center mb-24 relative perspective-1000"
  >
    {/* Background decorative elements */}
    <div
      class="absolute top-20 right-0 w-[500px] h-[500px] bg-accent-violet/10 rounded-full blur-[120px] pointer-events-none"
    >
    </div>
    <div
      class="absolute bottom-0 left-0 w-[300px] h-[300px] bg-accent-cyan/10 rounded-full blur-[100px] pointer-events-none"
    >
    </div>

    {/* Scanline Overlay */}
    <div
      class="absolute inset-0 pointer-events-none z-50 bg-[url('data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHdpZHRoPSI0IiBoZWlnaHQ9IjQiPgo8cmVjdCB3aWR0aD0iNCIgaGVpZ2h0PSI0IiBmaWxsPSIjZmZmIiBmaWxsLW9wYWNpdHk9IjAuMDUiLz4KPC9zdmc+')] opacity-20"
    >
    </div>

    <div class="grid lg:grid-cols-12 gap-12 items-center">
      <div class="lg:col-span-8 space-y-8 relative z-10">
        <div
          class="inline-flex items-center gap-3 px-4 py-2 border-2 border-accent-cyan bg-black shadow-[4px_4px_0px_0px_rgba(34,211,238,1)]"
        >
          <span class="w-3 h-3 bg-accent-cyan animate-pulse"></span>
          <span
            class="text-accent-cyan text-xs font-pixel tracking-widest uppercase"
          >
            INSERT COIN TO START
          </span>
        </div>

        <h1
          class="text-4xl md:text-6xl lg:text-7xl font-bold leading-tight tracking-tight font-pixel text-white drop-shadow-[4px_4px_0px_rgba(167,139,250,1)]"
        >
          DIGITAL <br />
          <span class="text-accent-cyan">WORLDS</span>
        </h1>

        <p
          id="hero-typewriter"
          class="text-lg md:text-xl text-secondary max-w-2xl leading-relaxed font-mono border-l-4 border-accent-violet pl-6 py-2 bg-white/5 min-h-[120px]"
        >
          {/* Text will be injected via JS */}
        </p>

        <div class="flex flex-wrap gap-6 pt-6 reveal-on-scroll">
          <a
            href="#projects"
            class="group relative px-6 py-4 bg-accent-cyan text-black font-bold font-pixel text-xs uppercase tracking-wider hover:translate-y-1 hover:shadow-none shadow-[4px_4px_0px_0px_#fff] transition-all"
          >
            START GAME
          </a>
          <a
            href="/blog"
            class="px-6 py-4 bg-transparent border-2 border-white text-white font-pixel text-xs uppercase tracking-wider hover:bg-white hover:text-black hover:translate-y-1 hover:shadow-none shadow-[4px_4px_0px_0px_rgba(167,139,250,1)] transition-all"
          >
            READ MANUAL
          </a>
        </div>
      </div>

      {/* 8-Bit Avatar / Graphic Placeholder */}
      <div class="lg:col-span-4 hidden lg:block relative reveal-on-scroll">
        <div
          class="w-64 h-64 mx-auto bg-accent-violet relative image-pixelated animate-bounce-slow shadow-[8px_8px_0px_0px_rgba(34,211,238,1)] border-4 border-white"
        >
          {/* Simple CSS Pixel Art Face */}
          <div
            class="absolute top-12 left-12 w-8 h-8 bg-black shadow-[40px_0_0_0_#000]"
          >
          </div>
          {/* Eyes */}
          <div class="absolute top-32 left-16 w-32 h-4 bg-black"></div>
          {/* Mouth */}
          <div class="absolute top-32 left-12 w-4 h-4 bg-black"></div>
          <div class="absolute top-32 right-12 w-4 h-4 bg-black"></div>
        </div>
        <div
          class="mt-8 text-center font-pixel text-[10px] text-accent-cyan animate-pulse"
        >
          PLAYER 1 READY
        </div>
      </div>
    </div>
  </section>

  <!-- Projects Section: Mission Log -->
  <section id="projects" class="mb-32 reveal-on-scroll">
    <div
      class="flex items-end justify-between mb-16 border-b border-white/10 pb-6"
    >
      <div>
        <h2 class="text-4xl md:text-5xl font-bold mb-2 tracking-tight">
          MISSION LOG
        </h2>
        <p class="text-secondary font-mono text-sm">
          SELECTED_WORKS // 2023-2025
        </p>
      </div>
      <a
        href="/projects"
        class="hidden md:flex items-center gap-2 text-accent-cyan font-mono text-sm hover:text-white transition-colors"
      >
        [VIEW_ALL_MISSIONS]
      </a>
    </div>

    <div
      class="grid grid-cols-1 md:grid-cols-3 gap-6 auto-rows-[300px] perspective-1000"
    >
      {
        sortedProjects.map((project, index) => (
          <article
            class={`group relative rounded-xl overflow-hidden bg-surface border border-white/5 transition-all duration-500 hover:z-10 hover:shadow-[0_0_50px_rgba(34,211,238,0.1)] transform-style-3d hover:scale-[1.02] ${index === 0 ? "md:col-span-2 md:row-span-2" : index === 3 ? "md:col-span-2" : ""}`}
          >
            <a href={`/projects/${project.slug}`} class="absolute inset-0 z-20">
              <span class="sr-only">View {project.data.title}</span>
            </a>

            {/* Background Gradient/Image Placeholder */}
            <div class="absolute inset-0 bg-gradient-to-br from-surface via-surface to-accent-violet/10 opacity-90 z-10 transition-opacity group-hover:opacity-80" />
            <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-accent-cyan/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-700 z-10" />

            {/* Grid Overlay */}
            <div class="absolute inset-0 bg-[url('/grid.svg')] bg-center opacity-[0.03] z-10 pointer-events-none" />

            <div class="absolute inset-0 p-8 z-20 flex flex-col justify-end">
              <div class="transform transition-transform duration-500 group-hover:-translate-y-2">
                <div class="flex items-center gap-3 mb-3">
                  <span class="px-2 py-0.5 text-[10px] font-mono border border-accent-cyan/30 text-accent-cyan bg-accent-cyan/5 uppercase tracking-wider">
                    SEC-{index + 1}
                  </span>
                  {project.data.stack?.slice(0, 2).map((tech) => (
                    <span class="text-[10px] font-mono text-secondary/70 uppercase">
                      {tech}
                    </span>
                  ))}
                </div>

                <h3
                  class={`font-bold mb-2 leading-none group-hover:text-accent-cyan transition-colors ${index === 0 ? "text-4xl md:text-5xl" : "text-2xl"}`}
                >
                  {project.data.title}
                </h3>

                <p class="text-secondary line-clamp-2 max-w-lg text-sm md:text-base opacity-0 group-hover:opacity-100 transition-opacity duration-500 delay-100">
                  {project.data.summary}
                </p>
              </div>
            </div>

            {/* Corner Accents */}
            <div class="absolute top-0 left-0 w-4 h-4 border-t border-l border-white/20 z-20" />
            <div class="absolute bottom-0 right-0 w-4 h-4 border-b border-r border-white/20 z-20" />
          </article>
        ))
      }
    </div>

    <div class="mt-8 text-center md:hidden">
      <a
        href="/projects"
        class="inline-block px-6 py-3 border border-white/10 text-accent-cyan font-mono text-sm"
      >
        [VIEW_ALL_MISSIONS]
      </a>
    </div>
  </section>

  <!-- Writing Section: Data Feed -->
  <section id="writing" class="mb-32 reveal-on-scroll">
    <div class="grid md:grid-cols-12 gap-12">
      <div class="md:col-span-4">
        <h2 class="text-4xl font-bold mb-6 tracking-tight">DATA FEED</h2>
        <p class="text-secondary mb-8 font-light">
          Incoming transmissions regarding system architecture, design
          protocols, and neural networks.
        </p>
        <a
          href="/blog"
          class="inline-flex items-center gap-2 text-sm font-mono text-accent-violet hover:text-white transition-colors group"
        >
          <span class="group-hover:translate-x-1 transition-transform">-></span>
          ACCESS_ARCHIVE
        </a>
      </div>

      <div class="md:col-span-8">
        <div class="space-y-2 font-mono text-sm">
          {
            sortedPosts.map((post, i) => (
              <a
                href={`/blog/${post.slug}`}
                class="group flex items-center gap-4 p-4 border-b border-white/5 hover:bg-white/5 transition-colors"
              >
                <span class="text-secondary/50">0{i + 1}</span>
                <div class="flex-1">
                  <h3 class="text-white group-hover:text-accent-cyan transition-colors truncate">
                    {post.data.title}
                  </h3>
                </div>
                <span class="text-secondary/50 text-xs whitespace-nowrap hidden sm:block">
                  {new Date(post.data.publishDate).toLocaleDateString("en-US", {
                    month: "2-digit",
                    day: "2-digit",
                    year: "numeric",
                  })}
                </span>
                <span class="text-accent-cyan opacity-0 group-hover:opacity-100 transition-opacity">
                  &lt;READ&gt;
                </span>
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </section>

  <!-- Contact / CTA -->
  <section
    id="contact"
    class="relative overflow-hidden border-y border-white/10 py-24 text-center reveal-on-scroll"
  >
    <div class="absolute inset-0 bg-accent-cyan/5"></div>
    <div
      class="absolute inset-0 bg-[url('/grid.svg')] bg-center opacity-[0.05]"
    >
    </div>

    <div class="relative z-10 max-w-3xl mx-auto px-4">
      <p class="font-mono text-accent-cyan text-sm mb-4 tracking-[0.2em]">
        /// TRANSMISSION_OPEN ///
      </p>
      <h2
        class="text-5xl md:text-7xl font-bold mb-8 tracking-tighter text-transparent bg-clip-text bg-gradient-to-b from-white to-white/50"
      >
        INITIATE COLLABORATION
      </h2>
      <p class="text-xl text-secondary mb-12 font-light max-w-xl mx-auto">
        Ready to deploy your next project? Signal strength is optimal.
      </p>
      <a
        href="mailto:hello@jarvishub.com"
        class="inline-block px-12 py-6 bg-white text-background text-lg font-bold font-mono hover:bg-accent-cyan hover:text-white transition-colors duration-300 clip-path-polygon"
      >
        ESTABLISH_UPLINK
      </a>
    </div>
  </section>
</Layout>

<script>
  // Typing Effect
  const text =
    "> Level 6 Developer \n> Crafting 8-bit dreams in a 64-bit world. \n> Press Start to explore.";
  const speed = 30; // ms per char
  const element = document.getElementById("hero-typewriter");

  let i = 0;
  function typeWriter() {
    if (element && i < text.length) {
      if (text.charAt(i) === "\n") {
        element.innerHTML += "<br/>";
      } else {
        element.innerHTML += text.charAt(i);
      }
      i++;
      setTimeout(typeWriter, speed);
    }
  }

  // Start typing when page loads
  window.addEventListener("load", typeWriter);
</script>

<style>
  .clip-path-polygon {
    clip-path: polygon(10% 0, 100% 0, 100% 90%, 90% 100%, 0 100%, 0 10%);
  }
</style>
