---
import Layout from "@layouts/Layout.astro";
import { getCollection } from "astro:content";

const postsCollection = await getCollection("blog", ({ data }) => {
  return import.meta.env.DEV ? true : data.draft !== true;
});

const sortedPosts = postsCollection
  .sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime())
  .slice(0, 3);

const projectsCollection = await getCollection("projects", ({ data }) => {
  return import.meta.env.DEV ? true : data.status !== "archived";
});

const sortedProjects = projectsCollection
  .sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime())
  .filter(({ data }) => data.featured)
  .slice(0, 4);

const stats = [
  { label: 'Years Experience', value: '6+' },
  { label: 'Products Shipped', value: '12' },
  { label: 'Articles Written', value: '38' },
];
---

<Layout title="Jarvis Hub | Digital Craftsman">
  <!-- Hero Section -->
  <section id="hero" class="min-h-[80vh] flex flex-col justify-center mb-32 relative">
    <div class="absolute top-0 right-0 -z-10 opacity-30">
      <svg width="600" height="600" viewBox="0 0 600 600" fill="none" xmlns="http://www.w3.org/2000/svg" class="animate-spin-slow">
        <circle cx="300" cy="300" r="299.5" stroke="url(#paint0_linear)" stroke-opacity="0.5"/>
        <defs>
          <linearGradient id="paint0_linear" x1="300" y1="0" x2="300" y2="600" gradientUnits="userSpaceOnUse">
            <stop stop-color="#22D3EE"/>
            <stop offset="1" stop-color="#A78BFA" stop-opacity="0"/>
          </linearGradient>
        </defs>
      </svg>
    </div>

    <div class="space-y-8 max-w-4xl">
      <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full border border-accent-cyan/30 bg-accent-cyan/10 text-accent-cyan text-xs font-medium tracking-wider uppercase">
        <span class="relative flex h-2 w-2">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-accent-cyan opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2 w-2 bg-accent-cyan"></span>
        </span>
        Available for new projects
      </div>

      <h1 class="text-5xl md:text-7xl lg:text-8xl font-bold leading-[0.9] tracking-tighter">
        Crafting <span class="text-transparent bg-clip-text bg-gradient-to-r from-accent-cyan to-accent-violet">Digital</span><br/>
        <span class="relative inline-block">
          Universes
          <svg class="absolute -bottom-2 left-0 w-full h-3 text-accent-violet opacity-60" viewBox="0 0 100 10" preserveAspectRatio="none">
            <path d="M0 5 Q 50 10 100 5" stroke="currentColor" stroke-width="2" fill="none" />
          </svg>
        </span>
      </h1>

      <p class="text-xl md:text-2xl text-secondary max-w-2xl leading-relaxed">
        I'm Jarvis. A creative developer obsessed with building immersive, high-performance web experiences that leave a lasting impression.
      </p>

      <div class="flex flex-wrap gap-4 pt-4">
        <a href="#projects" class="group relative px-8 py-4 bg-white text-background font-bold rounded-full overflow-hidden transition-transform hover:scale-105">
          <div class="absolute inset-0 bg-gradient-to-r from-accent-cyan to-accent-violet opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          <span class="relative z-10 group-hover:text-white transition-colors">Explore Work</span>
        </a>
        <a href="/blog" class="px-8 py-4 rounded-full border border-white/10 hover:bg-white/5 transition-colors font-medium">
          Read Notes
        </a>
      </div>

      <div class="grid grid-cols-3 gap-8 pt-12 border-t border-white/5 mt-12">
        {stats.map(stat => (
          <div>
            <div class="text-3xl font-bold font-display text-white mb-1">{stat.value}</div>
            <div class="text-sm text-secondary uppercase tracking-wider">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Projects -->
  <section id="projects" class="mb-32">
    <div class="flex items-end justify-between mb-12">
      <div>
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Selected Work</h2>
        <p class="text-secondary">A collection of recent experiments and products.</p>
      </div>
      <a href="/projects" class="hidden md:flex items-center gap-2 text-accent-cyan hover:text-accent-violet transition-colors">
        View all projects <span class="text-xl">→</span>
      </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {sortedProjects.map((project, index) => (
        <article class={`group relative rounded-3xl overflow-hidden bg-surface border border-white/5 transition-all duration-500 hover:-translate-y-2 hover:shadow-[0_0_30px_rgba(34,211,238,0.15)] ${index === 0 || index === 3 ? 'md:col-span-2 aspect-[2/1]' : 'aspect-square'}`}>
          <a href={`/projects/${project.slug}`} class="absolute inset-0 z-20">
            <span class="sr-only">View {project.data.title}</span>
          </a>
          
          <div class="absolute inset-0 bg-gradient-to-t from-background via-background/50 to-transparent z-10 opacity-90"></div>
          
          <!-- Placeholder for project image if available, otherwise a gradient pattern -->
          <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top_right,_var(--tw-gradient-stops))] from-accent-violet/20 via-background to-background opacity-50 group-hover:scale-105 transition-transform duration-700"></div>

          <div class="absolute bottom-0 left-0 p-8 z-20 w-full">
            <div class="flex flex-wrap gap-2 mb-4">
              {project.data.stack?.slice(0, 3).map(tech => (
                <span class="px-3 py-1 text-xs font-medium rounded-full bg-white/10 backdrop-blur-md border border-white/10 text-white/80">
                  {tech}
                </span>
              ))}
            </div>
            <h3 class="text-2xl md:text-3xl font-bold mb-2 group-hover:text-accent-cyan transition-colors">{project.data.title}</h3>
            <p class="text-secondary line-clamp-2 max-w-xl">{project.data.summary}</p>
          </div>
        </article>
      ))}
    </div>
    
    <div class="mt-8 text-center md:hidden">
      <a href="/projects" class="inline-flex items-center gap-2 text-accent-cyan">
        View all projects →
      </a>
    </div>
  </section>

  <!-- Writing Section -->
  <section id="writing" class="mb-32 grid md:grid-cols-12 gap-12">
    <div class="md:col-span-4">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Writing</h2>
      <p class="text-secondary mb-8">
        Thoughts on software engineering, design systems, and the future of the web.
      </p>
      <a href="/blog" class="inline-flex px-6 py-3 rounded-full border border-white/10 hover:bg-white/5 transition-colors text-sm font-medium">
        Read the Archive
      </a>
    </div>

    <div class="md:col-span-8 space-y-6">
      {sortedPosts.map(post => (
        <a href={`/blog/${post.slug}`} class="group block p-6 rounded-2xl bg-white/5 border border-white/5 hover:border-accent-cyan/30 hover:bg-white/10 transition-all duration-300">
          <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-2">
            <h3 class="text-xl font-bold group-hover:text-accent-cyan transition-colors">{post.data.title}</h3>
            <time class="text-sm text-secondary font-mono shrink-0">
              {new Date(post.data.publishDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
            </time>
          </div>
          <p class="text-secondary/80 line-clamp-2">{post.data.description}</p>
        </a>
      ))}
    </div>
  </section>

  <!-- Contact / CTA -->
  <section id="contact" class="relative rounded-[2.5rem] overflow-hidden bg-gradient-to-br from-accent-violet/20 to-accent-cyan/10 border border-white/10 p-12 md:p-24 text-center">
    <div class="absolute inset-0 bg-[url('/noise.png')] opacity-[0.05] mix-blend-overlay"></div>
    <div class="relative z-10 max-w-2xl mx-auto">
      <h2 class="text-4xl md:text-6xl font-bold mb-6 tracking-tight">Ready to start your next mission?</h2>
      <p class="text-xl text-secondary mb-10">
        I'm currently accepting new commissions. Let's build something that defies gravity.
      </p>
      <a href="mailto:hello@jarvishub.com" class="inline-block px-10 py-5 bg-white text-background text-lg font-bold rounded-full hover:scale-105 hover:shadow-[0_0_40px_rgba(255,255,255,0.3)] transition-all duration-300">
        Initiate Contact
      </a>
    </div>
  </section>
</Layout>

<style>
  .animate-spin-slow {
    animation: spin 12s linear infinite;
  }
  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
</style>
