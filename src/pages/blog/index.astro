---
import Layout from "@layouts/Layout.astro";
import PixelCube from "@components/PixelCube.astro";
import BlogCard from "@components/BlogCard.astro";
import { getCollection } from "astro:content";

const posts = (
  await getCollection("blog", ({ data }) =>
    import.meta.env.DEV ? true : data.draft !== true,
  )
)
  .slice()
  .sort(
    (a, b) =>
      new Date(b.data.publishDate).getTime() -
      new Date(a.data.publishDate).getTime(),
  );

const siteOrigin =
  Astro.site?.origin ?? Astro.url.origin ?? "https://jarvishub.com";
const pageUrl = new URL(Astro.url.pathname, siteOrigin).toString();

const blogStructuredData = {
  "@context": "https://schema.org",
  "@type": "Blog",
  name: "Jarvis Hub Writing",
  url: pageUrl,
  description:
    "Long-form notes on design systems, creative development, and learning in public.",
  inLanguage: "en-US",
};
---

<Layout
  title="Data Archive - Jarvis Hub"
  description="Long-form notes on design systems, creative development, and learning in public."
  seo={{
    type: "website",
    image: {
      src: "/favicon.svg",
      alt: "Jarvis Hub logomark",
    },
    structuredData: blogStructuredData,
  }}
>
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12 space-y-20">
    <header
      class="relative flex flex-col md:flex-row justify-between items-start md:items-end gap-8 border-b-4 border-white/10 pb-12"
    >
      <div class="space-y-6 max-w-3xl">
        <div
          class="inline-flex items-center gap-2 px-2 py-1 bg-accent-cyan/10 border border-accent-cyan/30 text-accent-cyan text-[10px] font-pixel uppercase tracking-widest"
        >
          <span class="w-2 h-2 bg-accent-cyan animate-pulse"></span>
          System Logs // Archive
        </div>
        <h1
          class="text-4xl md:text-6xl font-bold font-pixel tracking-tight leading-tight"
        >
          DATA <span class="text-accent-cyan">ARCHIVE</span>
        </h1>
        <p
          class="text-lg text-secondary leading-relaxed max-w-2xl font-mono border-l-4 border-accent-violet pl-6"
        >
          > Decoding the chaos of modern web development. <br />
          > Protocols, experiments, and thoughts.
        </p>
      </div>

      <div class="hidden md:block">
        <PixelCube />
      </div>
    </header>

    <section class="space-y-8" aria-label="Latest transmissions">
      <div class="flex items-center gap-4">
        <h2 class="text-2xl font-pixel text-white">LATEST_TRANSMISSIONS</h2>
        <div class="h-1 flex-1 bg-white/10 border-b border-white/5"></div>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {posts.map((post) => <BlogCard post={post} />)}
      </div>
    </section>
  </div>
</Layout>

<style>
  .perspective-1000 {
    perspective: 1000px;
  }
</style>
