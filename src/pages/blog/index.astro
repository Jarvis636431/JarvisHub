---
import Layout from "@layouts/Layout.astro";
import BlogCard from "@components/BlogCard.astro";
import { getCollection } from "astro:content";

const posts = (
  await getCollection("blog", ({ data }) =>
    import.meta.env.DEV ? true : data.draft !== true
  )
)
  .slice()
  .sort(
    (a, b) =>
      new Date(b.data.publishDate).getTime() -
      new Date(a.data.publishDate).getTime()
  );

const latestPost = posts[0];
const otherPosts = posts.slice(1);
const tagCount = new Set(posts.flatMap((post) => post.data.tags)).size;

const siteOrigin =
  Astro.site?.origin ?? Astro.url.origin ?? "https://jarvishub.com";
const pageUrl = new URL(Astro.url.pathname, siteOrigin).toString();

const blogStructuredData = {
  "@context": "https://schema.org",
  "@type": "Blog",
  name: "Jarvis Hub Writing",
  url: pageUrl,
  description:
    "Long-form notes on design systems, creative development, and learning in public.",
  inLanguage: "en-US",
};

// Format date helper
function formatDate(date: Date) {
  return new Date(date).toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
}
---

<Layout
  title="Writing - Jarvis Hub"
  description="Long-form notes on design systems, creative development, and learning in public."
  seo={{
    type: "website",
    image: {
      src: "/favicon.svg",
      alt: "Jarvis Hub logomark",
    },
    structuredData: blogStructuredData,
  }}
>
  <div class="min-h-screen">
    <div class="page-shell">
      <section class="page-hero">
        <div class="page-hero__pattern"></div>
        <div class="page-hero__inner animate-in-fade">
          <div class="space-y-6">
            <div class="page-badge">
              <span class="page-badge__dot bg-accent-cyan"></span>
              Field Notes
            </div>
            <h1 class="page-title">
              Writing in public,
              <span class="page-title__muted">shipping in public.</span>
            </h1>
            <p class="page-subtitle">
              Essays on design systems, creative development, and the small
              experiments that sharpen the craft.
            </p>
            <div class="flex flex-wrap gap-2">
              <span class="page-chip">Long-form</span>
              <span class="page-chip">Systems</span>
              <span class="page-chip">Experiments</span>
            </div>
          </div>
          <div class="page-meta-card">
            <div class="page-meta">
              <span>Total Posts</span>
              <strong>{posts.length}</strong>
            </div>
            <div class="page-meta">
              <span>Last Update</span>
              <strong>
                {latestPost ? formatDate(latestPost.data.publishDate) : "-"}
              </strong>
            </div>
            <div class="page-meta">
              <span>Topics</span>
              <strong>{tagCount}</strong>
            </div>
          </div>
        </div>
      </section>

      <main class="page-content space-y-20">
        {
          latestPost && (
            <section aria-label="Featured post" class="animate-in-slide delay-100">
              <div class="section-title">
                <span>Latest Dispatch</span>
                <span class="section-title__line"></span>
              </div>

              <a
                href={`/blog/${latestPost.slug}`}
                class="group relative grid md:grid-cols-12 gap-8 items-start p-6 md:p-10 rounded-2xl bg-surface border border-black/5 shadow-sm hover:shadow-md hover:border-accent-violet/30 transition-all duration-500"
              >
                <div class="md:col-span-7 space-y-6">
                  <div class="flex flex-wrap items-center gap-4 text-xs font-pixel text-secondary">
                    <span class="px-2 py-1 bg-black/5 rounded text-primary">
                      {formatDate(latestPost.data.publishDate)}
                    </span>
                    <span>{latestPost.data.readingTime ?? 5} min read</span>
                    {latestPost.data.tags.slice(0, 2).map((tag) => (
                      <span class="text-accent-violet">#{tag}</span>
                    ))}
                  </div>

                  <h2 class="text-3xl md:text-5xl font-display leading-tight group-hover:text-accent-violet transition-colors duration-300">
                    {latestPost.data.title}
                  </h2>

                  <p class="text-lg text-secondary leading-relaxed line-clamp-3">
                    {latestPost.data.description}
                  </p>

                  <div class="pt-4 flex items-center gap-2 text-sm font-medium text-primary group-hover:text-accent-violet transition-colors">
                    Read Article
                    <svg
                      class="w-4 h-4 transition-transform group-hover:translate-x-1"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17 8l4 4m0 0l-4 4m4-4H3"
                      />
                    </svg>
                  </div>
                </div>

                {latestPost.data.heroImage && (
                  <div class="md:col-span-5 w-full h-full min-h-[240px] md:min-h-[320px] relative overflow-hidden rounded-xl border border-black/5 bg-black/5">
                    <img
                      src={latestPost.data.heroImage}
                      alt={latestPost.data.title}
                      class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500" />
                  </div>
                )}
              </a>
            </section>
          )
        }

        <section aria-label="Archive" class="space-y-8">
          <div class="section-title">
            <span>Archive</span>
            <span class="section-title__line"></span>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 staggered-grid">
            {
              otherPosts.map((post) => (
                <div class="opacity-0 translate-y-4 transition-all duration-700 ease-out fill-mode-forwards">
                  <BlogCard post={post} />
                </div>
              ))
            }
          </div>
        </section>
      </main>
    </div>
  </div>
</Layout>

<script>
  function animateGrid() {
    const items = document.querySelectorAll(".staggered-grid > div");
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry, index) => {
          if (entry.isIntersecting) {
            // Add delay based on index
            (entry.target as HTMLElement).style.transitionDelay =
              `${index * 100}ms`;
            entry.target.classList.remove("opacity-0", "translate-y-4");
            observer.unobserve(entry.target);
          }
        });
      },
      {
        rootMargin: "50px",
        threshold: 0.1,
      }
    );

    items.forEach((item) => observer.observe(item));
  }

  // Run on initial load
  animateGrid();

  // Run on view transitions
  document.addEventListener("astro:page-load", animateGrid);
</script>

<style>
  .animate-in-fade {
    animation: fadeIn 0.8s ease-out forwards;
  }

  .animate-in-slide {
    animation: slideUp 0.8s ease-out forwards;
    opacity: 0;
    transform: translateY(20px);
  }

  .delay-100 {
    animation-delay: 0.1s;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .fill-mode-forwards {
    animation-fill-mode: forwards;
  }

  .page-shell {
    max-width: 72rem;
    margin: 0 auto;
    padding: 2.5rem 1.5rem 4rem;
    display: flex;
    flex-direction: column;
    gap: 4rem;
  }

  .page-hero {
    position: relative;
    overflow: hidden;
    border-radius: 28px;
    border: 1px solid rgba(31, 31, 31, 0.06);
    background: rgba(255, 255, 255, 0.75);
    padding: 3.5rem clamp(1.5rem, 3vw, 3rem);
  }

  .page-hero__pattern {
    position: absolute;
    inset: 0;
    opacity: 0.08;
    background-image: radial-gradient(rgba(15, 23, 42, 0.4) 1px, transparent 1px);
    background-size: 28px 28px;
    pointer-events: none;
  }

  .page-hero__inner {
    position: relative;
    display: grid;
    gap: 2.5rem;
    grid-template-columns: minmax(0, 1fr) minmax(220px, 280px);
    align-items: end;
  }

  .page-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.35rem 0.65rem;
    border-radius: 999px;
    background: rgba(15, 23, 42, 0.05);
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.16em;
    color: rgba(31, 31, 31, 0.7);
    font-family: "IBM Plex Mono", monospace;
  }

  .page-badge__dot {
    width: 0.5rem;
    height: 0.5rem;
    border-radius: 999px;
    display: inline-block;
  }

  .page-title {
    font-size: clamp(2.8rem, 6vw, 4.8rem);
    line-height: 0.95;
    letter-spacing: -0.02em;
  }

  .page-title__muted {
    display: block;
    color: rgba(31, 31, 31, 0.55);
  }

  .page-subtitle {
    font-size: 1.1rem;
    color: rgba(55, 65, 81, 0.9);
    max-width: 32rem;
    line-height: 1.7;
  }

  .page-chip {
    padding: 0.35rem 0.8rem;
    border-radius: 999px;
    background: rgba(15, 23, 42, 0.06);
    border: 1px solid rgba(15, 23, 42, 0.08);
    font-size: 0.75rem;
    color: rgba(31, 31, 31, 0.7);
  }

  .page-meta-card {
    display: grid;
    gap: 1.5rem;
    padding: 1.5rem;
    border-radius: 20px;
    border: 1px solid rgba(31, 31, 31, 0.08);
    background: rgba(255, 255, 255, 0.85);
    box-shadow: 0 10px 30px rgba(31, 31, 31, 0.06);
  }

  .page-meta {
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.14em;
    color: rgba(31, 31, 31, 0.5);
    font-family: "IBM Plex Mono", monospace;
  }

  .page-meta strong {
    font-size: 1.4rem;
    font-family: "Space Grotesk", sans-serif;
    color: rgba(31, 31, 31, 0.9);
    text-transform: none;
    letter-spacing: -0.01em;
  }

  .section-title {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: 0.75rem;
    font-family: "IBM Plex Mono", monospace;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: rgba(31, 31, 31, 0.55);
  }

  .section-title__line {
    flex: 1;
    height: 1px;
    background: rgba(31, 31, 31, 0.12);
  }
</style>
